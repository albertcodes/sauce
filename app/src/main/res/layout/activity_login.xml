    <RelativeLayout
        android:id="@+id/welcome_box"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/box_light"
        >

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Welcome"
            android:fontFamily="@font/diablo_std_regular"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/phonenumber_login"
            android:inputType="number"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/welcome_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_design"
            android:layout_marginTop="40dp"
            android:hint="Phone Number"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/sf_ui_display_black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/phone_icon_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone_icon_round"
            android:layout_marginTop="132dp"
            android:layout_marginLeft="308dp"
            />

        <EditText
            android:id="@+id/password_login"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/phonenumber_login"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_design"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/sf_ui_display_black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/password_icon_login"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/password_icon_round"
            android:layout_marginTop="208dp"
            android:layout_marginLeft="308dp"
            />

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/password_login"
            android:layout_marginTop="10dp"
            android:text="Forgot password?"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/signin_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/forgot_password"
            android:background="@drawable/buttons_dark"
            android:layout_marginHorizontal="60dp"
            android:padding="20dp"
            android:text="Sign in"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/diablo_std_regular"
            />

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/signin_button"
            android:background="@drawable/buttons_empty"
            android:layout_marginHorizontal="60dp"
            android:text="Create new account"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</RelativeLayout>