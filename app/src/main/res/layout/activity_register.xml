<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

    <!--    Â© TMSauce  Android   Application     -->

    <ImageView
        android:id="@+id/app_logo_register"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo"
        android:layout_above="@id/new_account_box"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:id="@+id/new_account_box"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/box_light"
        >

        <TextView
            android:id="@+id/new_account_text"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Create Account"
            android:fontFamily="@font/diablo_std_regular"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/name_register"
            android:inputType="text"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/new_account_text"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_design"
            android:layout_marginTop="30dp"
            android:hint="Name"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/sf_ui_display_black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/name_icon_register"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/account_icon_round"
            android:layout_marginTop="122dp"
            android:layout_marginLeft="308dp"
            />

        <EditText
            android:id="@+id/phonenumber_register"
            android:inputType="number"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/name_register"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_design"
            android:layout_marginTop="20dp"
            android:hint="Phone Number"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/sf_ui_display_black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/phonenumber_icon_register"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone_icon_round"
            android:layout_marginTop="198dp"
            android:layout_marginLeft="308dp"
            />

        <EditText
            android:id="@+id/password_register"
            android:inputType="textPassword"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_below="@+id/phonenumber_register"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_design"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/sf_ui_display_black"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/password_icon_register"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/password_icon_round"
            android:layout_marginTop="273dp"
            android:layout_marginLeft="308dp"
            />


        <Button
            android:id="@+id/signup_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/password_register"
            android:background="@drawable/buttons_dark"
            android:layout_marginHorizontal="60dp"
            android:padding="20dp"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/diablo_std_regular"
            />

        <Button
            android:id="@+id/back_to_login_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/signup_button"
            android:background="@drawable/buttons_empty"
            android:layout_marginHorizontal="60dp"
            android:text="Back to login"
            android:fontFamily="@font/sf_ui_display_regular"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

</RelativeLayout>